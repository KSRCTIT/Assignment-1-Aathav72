using System;

class Program
{
    static double CalculateAverage(int[] marks)
    {
        int sum = 0;
        foreach (int mark in marks) sum += mark;
        return (double)sum / marks.Length;
    }

    static bool IsNameValid(string name)
    {
        foreach (char c in name)
            if (!char.IsLetter(c) && c != ' ')
                return false;
        return true;
    }

    static void Main()
    {
        int correctPIN = 1234, attempts = 0;
        bool accessGranted = false;
        while (attempts < 3)
        {
            Console.Write("Enter PIN: ");
            if (Convert.ToInt32(Console.ReadLine()) == correctPIN)
            {
                Console.WriteLine("Access Granted");
                accessGranted = true; break;
            }
            else { Console.WriteLine("Wrong PIN"); attempts++; }
        }
        if (!accessGranted) Console.WriteLine("Card Blocked");

        char choice;
        do
        {
            Console.Write("Enter a number for table: ");
            int num = Convert.ToInt32(Console.ReadLine());
            for (int i = 1; i <= 10; i++)
                Console.WriteLine($"{num} x {i} = {num * i}");
            Console.Write("Try another number? (Y/N): ");
            choice = Char.ToUpper(Console.ReadKey().KeyChar);
            Console.WriteLine();
        } while (choice == 'Y');

        Console.Write("Enter units consumed: ");
        int units = Convert.ToInt32(Console.ReadLine());
        double bill = units <= 100 ? units * 2 :
                      units <= 200 ? (100 * 2) + ((units - 100) * 3) :
